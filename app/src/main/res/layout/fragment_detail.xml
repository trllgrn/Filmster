<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout android:layout_width="match_parent"
        android:id="@+id/detail_layout_top"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/film_title"
            android:text="Star Wars"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center|center_horizontal"
            android:background="@color/material_deep_teal_200"
            android:textSize="@dimen/abc_text_size_headline_material"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/film_detail_poster"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/film_release"
                    android:text="2015-08-25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/film_rating"
                    android:text="7.7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
                <CheckBox
                    android:id="@+id/detail_button_fav"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:button="@android:drawable/btn_star"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>




        <TextView
            android:id="@+id/film_synopsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/trailer_section_title"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detail_trailer_section_heading" />

        <ListView
            android:id="@+id/detail_trailers_listview"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="240dp"></ListView>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/detail_trailers_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></LinearLayout>


    </LinearLayout>


</ScrollView>
